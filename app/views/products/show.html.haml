.product
  .product__box

    .image
      = image_tag @product.image
      .like
        -# - if likeをしていた時
        %i.fas.fa-heart
        -# - else likeをしていなかった時
        %i.far.fa-heart

    .product__box__info
      .info
        .info__title
          NAME
        .info__content
          = @product.name
      
      .info
        .info__title
          DESCRIPTION
        .info__content
          = @product.detail
          sampleTextsampleTextsampleTextsampleTextsampleTextmpleTextampleTextsampleText
      
      .info
        .info__title
          PRICE
        .info__content
          = @product.price

      .info
        .info__title
          HOW MANY ?
        .info__content
          = select_tag(:quantity, options_for_select((1..9).to_a), id: "product-quantity")

      .info
        .button#cart_btn{value: @product.id}
          ADD TO CART