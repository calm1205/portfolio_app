.signIn
  .signIn__box
    .left
      %img.header-logo(src="/assets/eclogo.png" alt="ヘッダーに使うロゴ")/
    .line

    .right
      .form
        .form__title
          Sign in
        = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
          .form__email
            = f.email_field :email, autofocus: true, placeholder: ' type your email'
          .form__password
            = f.password_field :password, autocomplete: "off", placeholder: ' type your password'
          .form__button
            = f.submit "Sign in"
