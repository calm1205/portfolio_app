#account-page.account-page
  .account-page__inner.clearfix
    .account-page__inner--left.account-page__header
      %h2 Create Account
      %h5 新規アカウントの作成
      = render "devise/shared/links"
    .account-page__inner--right.user-form
      = form_with model: @user, url: registration_path(resource_name) do |f|
        .field
          .field-label
            = f.label :email
          .field-input
            = f.email_field :email,value: "sample@gmail.com"
        .field
          .field-label
            = f.label :password
            %i (英数字8文字以上) ※ passwordというパスワードをデフォルト入力
          .field-input
            = f.password_field :password, autocomplete: "off",value: "password"
        .field
          .field-label
            = f.label :password_confirmation
          .field-input
            = f.password_field :password_confirmation, autocomplete: "off",value: "password"
        .actions
          = f.submit "Create Account", class: 'btn'
