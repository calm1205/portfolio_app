.pconsole

  = render partial: 'layouts/modal', locals: { content: '本当に削除しますか？', commit: '削除'}

  .pconsole__box
    
    %ul.title-box
      %li
      %li
      %li
        IMAGE
      %li
        NAME
      %li
        AMOUNT
      %li
        PRICE

    .pconsole__box__table
      - @products.each do |product|
        %ul
          %li
            = link_to edit_product_path(product) do
              .button
                EDIT
          %li
            .button.delete-button{'data-index': product.id}
              DELETE
          %li
            -# = image_tag product.images.variant(resize: '100x100') # Active Storage
            = image_tag product.images.first.src.url if product.images.present?
          %li
            = product.name
          %li
            x
            = product.stock
          %li
            = product.price